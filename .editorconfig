root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{build,css,doap,scss,ui,xml,xml.in,xml.in.in,yaml,yml}]
indent_size = 2

[*.{json,py,rs}]
indent_size = 4

[*.{c,h,h.in}]
indent_size = 2
max_line_length = 80

[NEWS]
indent_size = 2
max_line_length = 72
